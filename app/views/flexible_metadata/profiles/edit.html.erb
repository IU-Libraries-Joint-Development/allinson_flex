<% provide :page_header do %>
  <h1><span class="fa fa-edit" aria-hidden="true"></span> Edit Flexible Metadata Profile</h1>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default tabs">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active">
          <a href="#description" role="tab" data-toggle="tab"><%= t('.tabs.description') %></a>
        </li>
      </ul>
      <%= simple_form_for @flexible_metadata_profile, url: hyrax.profiles_path, method: :post do |form| %>
        <%= render 'form', flexible_metadata_profile: @flexible_metadata_profile, form: form %>
        <div class="panel-footer">
          <div class='pull-right'>
            <%= form.button :submit, 'Save Changes', class: 'btn btn-primary' %>
           <% cancel_path = form.object.persisted? ? flexible_metadata.profile_path(form.object) : hyrax.profiles_path %>
            | <%= link_to t('.cancel'), cancel_path, class: 'btn btn-default ' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
